<h1>Edit Post</h1>

{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}

<form action="/posts/{{post._id}}?_method=PUT" method="POST" class="post-form">
  <div>
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="{{post.title}}"
      required
    />
  </div>

  <div>
    <label for="article">Text (article):</label>
    <textarea id="article" name="article" rows="5" required>{{post.article}}</textarea>
  </div>

  <div>
    <label for="author">Author:</label>
    <input
      type="text"
      id="author"
      name="author"
      value="{{post.author}}"
      required
    />
  </div>

  <button type="submit">Save changes</button>
  <a href="/posts">Cancel</a>
</form>
